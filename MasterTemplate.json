{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
			"ResourceGroupType": {
				"type": "string",
				"allowedValues": [
					"-prod-rg",
					"-stage-rg",
					"-dev-rg"
				]
			},
			"appServiceOption": {
				"type": "string",
				"allowedValues": [
					"Yes",
					"No"
				],
				"defaultValue": "No"
			},
			"sqlServerOption": {
				"type": "string",
				"allowedValues": [
					"Yes",
					"No"
				],
				"defaultValue": "No"
			},
			"sqlAdministratorLogin": {
				"type": "string"
			},
			"sqlAdministratorLoginPass": {
				"type": "securestring"
			}

    },
	"variables": {
		"subscriptionIdProd": "d453c083-6d8e-4772-9486-c703cc1830c1",
		"subscriptionIdDev": "d453c083-6d8e-4772-9486-c703cc1830c1",
		"priLocation": "UK West",
		"secLocation": "UK South",
		"unsupportedLocation": "West Europe",
		"resourceGroupName": "[concat(resourceGroup().name, parameters('ResourceGroupType'))]",
		"appServiceName": "[concat(resourceGroup().name,'App', parameters('ResourceGroupType'))]",
		"appServicePlanName": "[concat(resourceGroup().name,'AppService', parameters('ResourceGroupType'))]",
		"appServicePlanSKU": "Standard",
		"appServicePlanSKUcode": "S1",
		"appServiceSlots": [
			"dev",
			"stage"
		],
		"sqlServerName": "[toLower(concat(resourceGroup().name,'sqlserver', parameters('ResourceGroupType')))]",
		"sqlDatabaseName": "[concat(resourceGroup().name,'SqlDatabase', parameters('ResourceGroupType'))]"
	},
	"resources": [
        {
			"condition": "[equals(parameters('appServiceOption'), 'Yes')]",
            "apiVersion": "2016-03-01",
            "name": "[variables('appServiceName')]",
            "type": "Microsoft.Web/sites",
            "properties": {
                "name": "[variables('appServiceName')]",
                "siteConfig": {
                    "appSettings": []
                },
                "serverFarmId": "[concat('/subscriptions/', variables('subscriptionIdProd'),'/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Web/serverfarms/', variables('appServicePlanName'))]",
                "hostingEnvironment": ""
            },
            "location": "[variables('priLocation')]",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', variables('appServicePlanName'))]"
            ]
        },
		{
			"condition": "[equals(parameters('appServiceOption'), 'Yes')]",
            "apiVersion": "2015-08-01",
            "name": "[variables('appServicePlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[variables('priLocation')]",
            "properties": {
                "name": "[variables('appServicePlanName')]",
				"workerSizeId": "0",
				"reserved": false,
				"numberOfWorkers": "1"
            },
            "sku": {
                "name" : "[variables('appServicePlanSKUcode')]",
                "tier": "[variables('appServicePlanSKU')]"
            }
        },
		{
			"condition": "[equals(parameters('appServiceOption'), 'Yes')]",
			"apiVersion": "2016-08-01",
			"type": "Microsoft.Web/sites/slots",
			"name": "[concat(variables('appServiceName'), '/', variables('appServiceSlots')[copyIndex()])]",
			"location": "[variables('priLocation')]",
			"properties": {
                "serverFarmId": "[concat('/subscriptions/', variables('subscriptionIdProd'),'/resourceGroups/', variables('resourceGroupName'), '/providers/Microsoft.Web/serverfarms/', variables('appServicePlanName'))]"
			},
			"dependsOn": [
				"[concat('Microsoft.Web/serverfarms/', variables('appServicePlanName'))]",
				"[resourceId('Microsoft.Web/sites',variables('appServiceName'))]"
			],
			"copy": {
				"name": "webPortalSlot",
				"count": "[length(variables('appServiceSlots'))]"
			}		
		},
		{
			"condition": "[equals(parameters('sqlServerOption'), 'Yes')]",
			"name": "[variables('sqlServerName')]",
			"type": "Microsoft.Sql/servers",
			"apiVersion": "2014-04-01-preview",
			"location": "[variables('priLocation')]",
			"properties": {
				"administratorLogin": "[parameters('sqlAdministratorLogin')]",
				"administratorLoginPassword": "[parameters('sqlAdministratorLoginPass')]"
			},
			"resources": [
				{
				  "condition": "[equals(parameters('sqlServerOption'), 'Yes')]",
				  "name": "[variables('sqlDatabaseName')]",
				  "type": "databases",
				  "location": "[variables('priLocation')]",
				  "apiVersion": "2015-01-01",
				  "dependsOn": [
					"[variables('sqlServerName')]"
				  ],
				  "properties": {
					"edition": "Basic",
					"requestedServiceObjectiveName": "Basic"
				  }
				},
				{
				"condition": "[equals(parameters('sqlServerOption'), 'Yes')]",
				  "type": "firewallrules",
				  "apiVersion": "2014-04-01",
				  "dependsOn": [
					"[variables('sqlServerName')]"
				  ],
				  "location": "[variables('priLocation')]",
				  "name": "AllowAllWindowsAzureIps",
				  "properties": {
					"endIpAddress": "0.0.0.0",
					"startIpAddress": "0.0.0.0"
				  }
				}
			]
		}
	  
		
    ]
}